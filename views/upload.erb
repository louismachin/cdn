<!DOCTYPE html>
<html>

<%= erb :_head, locals: { copy: @copy } %>

<% query = '' %>
<% query = "?d=#{key.join(DIR_DELIMITER)}" if key %>
<% post_uri = '/upload' + query %>

<body>
    <div id="page">
        <div class="upload-form">
            <form style="display: flex; flex-direction: column" action="<%= post_uri %>" method="post" enctype="multipart/form-data">
                <input class="mb" type="file" name="file" required>
                <input type="submit" value="Upload File">
            </form>
        </div>
    </div>
</body>

</html>
